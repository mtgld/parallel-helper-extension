{
  "name": "parallel-cards-helper",
  "displayName": "Parallel Cards Helper",
  "version": "1.0.0",
  "description": "The extension provides information about Parallel TCG cards when the cursor hovers over the card name on specific websites.",
  "author": "Metaguild",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.7.2",
    "plasmo": "0.82.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.243",
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "prettier": "3.0.2",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://opensea.io/*",
      "https://sudoswap.xyz/*",
      "https://parallel.life/*",
      "https://echelon.io/*",
      "https://souq.finance/*",
      "https://souq.gg/*",
      "https://looksrare.org/*",
      "https://blur.io/*",
      "https://thepriming.io/*",
      "https://rarible.com/*",
      "https://pro.opensea.io/*"
    ],
    "permissions": [
      "storage",
      "activeTab"
    ]
  }
}
